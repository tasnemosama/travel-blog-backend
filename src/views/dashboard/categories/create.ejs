<%- include('../../partials/header') %>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Create Category</h1>
        <a href="/dashboard/categories" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Back to Categories
        </a>
    </div>

    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <div class="card shadow-sm">
        <div class="card-body">
            <form action="/dashboard/categories/create" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label required-field">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= typeof formData !== 'undefined' ? formData.name : '' %>" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"><%= typeof formData !== 'undefined' ? formData.description : '' %></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="coverImage" class="form-label required-field">Cover Image</label>
                        <input type="file" class="form-control" id="coverImage" name="coverImage" accept="image/*" required>
                        <div id="coverImagePreview" class="image-preview mt-2"></div>
                    </div>
                    <div class="col-md-6">
                        <label for="thumbnail" class="form-label required-field">Thumbnail</label>
                        <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*" required>
                        <div id="thumbnailPreview" class="image-preview mt-2"></div>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="featured" name="featured" <%= typeof formData !== 'undefined' && formData.featured ? 'checked' : '' %>>
                    <label class="form-check-label" for="featured">Featured Category</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Create Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %> 