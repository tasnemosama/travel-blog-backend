<%- include('../partials/header') %>

<div class="container my-4">
    <h1 class="mb-4">Dashboard</h1>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-folder fa-2x mb-2"></i></h5>
                    <h3 class="card-text display-4"><%= stats.categoriesCount %></h3>
                    <p class="card-text">Categories</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/dashboard/categories" class="btn btn-sm btn-primary">Manage Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-blog fa-2x mb-2"></i></h5>
                    <h3 class="card-text display-4"><%= stats.blogsCount %></h3>
                    <p class="card-text">Blogs</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/dashboard/blogs" class="btn btn-sm btn-success">Manage Blogs</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-star fa-2x mb-2"></i></h5>
                    <h3 class="card-text display-4"><%= stats.featuredBlogs %></h3>
                    <p class="card-text">Featured Blogs</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/dashboard/blogs" class="btn btn-sm btn-warning">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-bookmark fa-2x mb-2"></i></h5>
                    <h3 class="card-text display-4"><%= stats.featuredCategories %></h3>
                    <p class="card-text">Featured Categories</p>
                </div>
                <div class="card-footer bg-white">
                    <a href="/dashboard/categories" class="btn btn-sm btn-info">View All</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Quick Links
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="/dashboard/categories/create" class="btn btn-outline-primary w-100">
                                <i class="fas fa-plus-circle me-2"></i> Add Category
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/dashboard/blogs/create" class="btn btn-outline-success w-100">
                                <i class="fas fa-plus-circle me-2"></i> Add Blog
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/" target="_blank" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-eye me-2"></i> View Website
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/dashboard/logout" class="btn btn-outline-danger w-100">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 